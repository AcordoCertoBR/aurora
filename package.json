{
  "name": "@consumidor-positivo/aurora",
  "private": false,
  "version": "0.0.106",
  "type": "module",
  "main": "./dist/main.es.js",
  "modules": "./dist/main.es.js",
  "sideEffects": [
    "*.scss",
    "*.css"
  ],
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.es.js"
    },
    "./package.json": "./package.json",
    "./dist/*.scss": {
      "import": "./dist/*.scss",
      "require": "./dist/*.scss"
    }
  },
  "scripts": {
    "tokens": "tsx scripts/update-tokens/index.ts",
    "icons": "tsx scripts/generate-icons/index.ts",
    "prebuild": "npm run tokens && npm run icons",
    "dev": "npm run prebuild && vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook": "npm run prebuild && storybook dev -p 6006 --disable-telemetry --no-version-updates",
    "build-storybook": "npm run prebuild && storybook build",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "react-aria-components": "1.3.3",
    "vite-plugin-dts": "4.0.0-beta.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "1.6.1",
    "@rollup/plugin-terser": "0.4.4",
    "@storybook/addon-docs": "8.2.7",
    "@storybook/addon-essentials": "8.2.7",
    "@storybook/addon-interactions": "8.2.7",
    "@storybook/addon-links": "8.2.7",
    "@storybook/addon-onboarding": "8.2.7",
    "@storybook/blocks": "8.2.7",
    "@storybook/manager-api": "8.2.7",
    "@storybook/react": "8.2.7",
    "@storybook/react-vite": "8.2.7",
    "@storybook/test": "8.2.7",
    "@storybook/theming": "8.2.7",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.15.0",
    "@typescript-eslint/parser": "7.15.0",
    "@vitejs/plugin-react": "4.3.1",
    "change-case": "5.4.4",
    "classnames": "2.5.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.7",
    "eslint-plugin-storybook": "0.8.0",
    "fs": "0.0.1-security",
    "glob": "7.2.3",
    "husky": "9.1.1",
    "prettier": "3.3.3",
    "react": ">=18.3.1",
    "react-dom": ">=18.3.1",
    "rimraf": "6.0.1",
    "rollup-plugin-css-only": "4.5.2",
    "sass": "1.77.8",
    "storybook": "8.2.7",
    "storybook-addon-pseudo-states": "3.1.1",
    "tsx": "4.17.0",
    "typescript": "5.2.2",
    "vite": "5.3.4",
    "vite-plugin-lib-inject-css": "2.1.1",
    "vite-plugin-static-copy": "1.0.6"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.21.1"
  }
}
